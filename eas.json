{
  "cli": {
    "version": ">= 14.2.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "buildConfiguration": "Debug"
      }
    },
    "development-simulator": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true,
        "buildConfiguration": "Debug"
      }
    },
    "preview": {
      "distribution": "store"
    },
    "production": {
      "autoIncrement": true, 
      "distribution": "store", 
      "ios": {
        "buildConfiguration": "Release", 
        "image": "latest", 
        "credentialsSource": "remote" 
      }
    }
  },
  "submit": {
    "production": {}
  }
}